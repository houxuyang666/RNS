<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tdkj.RNS.dao.MenuDao">

    <resultMap type="com.tdkj.RNS.entity.Menu" id="MenuMap">
        <result property="menuId" column="menu_id" jdbcType="INTEGER"/>
        <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="href" column="href" jdbcType="VARCHAR"/>
        <result property="icon" column="icon" jdbcType="VARCHAR"/>
        <result property="target" column="target" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MenuMap">
        select
          menu_id, parent_id, title, href, icon, target
        from menu
        where menu_id = #{menuId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MenuMap">
        select
          menu_id, parent_id, title, href, icon, target
        from menu
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="MenuMap">
        select
          menu_id, parent_id, title, href, icon, target
        from menu
        <where>
            <if test="menuId != null">
                and menu_id = #{menuId}
            </if>
            <if test="parentId != null">
                and parent_id = #{parentId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="href != null and href != ''">
                and href = #{href}
            </if>
            <if test="icon != null and icon != ''">
                and icon = #{icon}
            </if>
            <if test="target != null and target != ''">
                and target = #{target}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="menuId" useGeneratedKeys="true">
        insert into menu(parent_id, title, href, icon, target)
        values (#{parentId}, #{title}, #{href}, #{icon}, #{target})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update menu
        <set>
            <if test="parentId != null">
                parent_id = #{parentId},
            </if>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="href != null and href != ''">
                href = #{href},
            </if>
            <if test="icon != null and icon != ''">
                icon = #{icon},
            </if>
            <if test="target != null and target != ''">
                target = #{target},
            </if>
        </set>
        where menu_id = #{menuId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from menu where menu_id = #{menuId}
    </delete>

</mapper>