<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tdkj.RNS.dao.UserDao">

    <resultMap type="com.tdkj.RNS.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="username" column="username" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="salt" column="salt" jdbcType="VARCHAR"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="rid" column="rid" jdbcType="INTEGER"/>
        <result property="userinfoId" column="userinfo_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          id, username, password, salt, status, rid, userinfo_id
        from test.u_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          id, username, password, salt, status, rid, userinfo_id
        from test.u_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserMap">
        select
          id, username, password, salt, status, rid, userinfo_id
        from test.u_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="username != null and username != ''">
                and username = #{username}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="salt != null and salt != ''">
                and salt = #{salt}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="rid != null">
                and rid = #{rid}
            </if>
            <if test="userinfoId != null">
                and userinfo_id = #{userinfoId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into test.u_user(username, password, salt, status, rid, userinfo_id)
        values (#{username}, #{password}, #{salt}, #{status}, #{rid}, #{userinfoId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update test.u_user
        <set>
            <if test="username != null and username != ''">
                username = #{username},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="salt != null and salt != ''">
                salt = #{salt},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="rid != null">
                rid = #{rid},
            </if>
            <if test="userinfoId != null">
                userinfo_id = #{userinfoId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from test.u_user where id = #{id}
    </delete>


    <!--查询单个-->
    <select id="findByName" resultMap="UserMap">
        select
          id, username, password, salt, status, rid, userinfo_id
        from test.u_user
        where username = #{username}
    </select>


</mapper>